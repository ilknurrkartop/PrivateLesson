@model TeacherRegisterViewModel
<div class="container mt-5">
    <h1 class="display-6">Kayıt Ol</h1>
    <hr />
    <form asp-area="" asp-controller="Account" asp-action="TeacherRegister" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-7">
                <div class="row">
                    <div class="col-4 mb-3">
                        <label class="form-label" asp-for="FirstName"></label>
                        <input class="form-control" asp-for="FirstName">
                        <span class="text-danger" asp-validation-for="FirstName"></span>
                    </div>
                    <div class="col-4 mb-3">
                        <label class="form-label" asp-for="LastName"></label>
                        <input class="form-control" asp-for="LastName">
                        <span class="text-danger" asp-validation-for="LastName"></span>
                    </div>
                    <div class="col-4 mb-3">
                        <label class="form-label" asp-for="UserName"></label>
                        <input class="form-control" asp-for="UserName">
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                    
                </div>
               <div class="row">
                    <div class="col-4 mb-3">
                        <label class="form-label" asp-for="Gender"></label>
                        <input class="form-control" asp-for="Gender">
                        <span class="text-danger" asp-validation-for="Gender"></span>
                    </div>
                    
                    <div class="col-4 mb-3">
                        <label class="form-label" asp-for="Price"></label>
                        <input class="form-control" asp-for="Price">
                        <span class="text-danger" asp-validation-for="Price"></span>
                    </div>
                    <div class="col-4 mb-3">
                        <label class="form-label" asp-for="DateOfBirth"></label>
                        <input class="form-control" asp-for="DateOfBirth">
                        <span class="text-danger" asp-validation-for="DateOfBirth"></span>
                    </div>
               </div>
               <div class="row">
                    <div class="col-4 mb-3">
                        <label class="form-label" asp-for="Graduation"></label>
                        <input class="form-control" asp-for="Graduation">
                        <span class="text-danger" asp-validation-for="Graduation"></span>
                    </div>
                    <div class="col-4 mb-3">
                        <label class="form-label" asp-for="City"></label>
                        <input class="form-control" asp-for="City">
                        <span class="text-danger" asp-validation-for="City"></span>
                    </div>
                    <div class="col-4 mb-3">
                        <label class="form-label" asp-for="Phone"></label>
                        <input class="form-control" asp-for="Phone">
                        <span class="text-danger" asp-validation-for="Phone"></span>
                    </div>
                    
               </div>
               <div class="row">
                    <div class="col-4 mb-3">
                        <label class="form-label" asp-for="Email"></label>
                        <input class="form-control" asp-for="Email">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="col-4 mb-3">
                        <label class="form-label" asp-for="Password"></label>
                        <input class="form-control" asp-for="Password">
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="col-4 mb-3">
                        <label class="form-label" asp-for="RePassword"></label>
                        <input class="form-control" asp-for="RePassword">
                        <span class="text-danger" asp-validation-for="RePassword"></span>
                    </div>
                    <div class="col-12 mb-3">
                        <input type="file" asp-for="Image" class="form-control" accept="images/" multiple />
                        <span class="text-danger" asp-validation-for="Image"></span>
                    </div>

               </div>
            </div>

            <div class="col-2">
                <h5>Kategori Seç</h5>
                @foreach (var branch in Model.Branches)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="SelectedBranches" 
                        value="@branch.Id" @if (Model.SelectedBranches != null)
                        {
                            @(Model.SelectedBranches.Any(sc => sc == branch.Id) ? "checked" : "")
                        }>
                        <label class="form-check-label">@branch.BranchName</label>
                    </div>
                }

            </div>
            <div class="col-3">
                <img class="img-fluid mt-5" src="~/images/yanbg.jpg" alt="" />

            </div>
        </div>
        
        <button type="submit" class="btn btn-primary">Kaydol</button>

    </form>

</div>
