@model StudentRegisterViewModel

<div class="container-fluid w-100 h-100 mt-2" style="padding:0">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
            <div class="card text-black border-0" @*style="border-radius: 25px;"*@>
                <div class="card-body p-md-5">
                    <div class="row justify-content-center">
                        <div class="col-md-10 col-lg-6 order-2 order-lg-1">

                            <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                            <form asp-area="" asp-controller="Account" asp-action="StudentRegister" method="post" enctype="multipart/form-data" class="mx-1 mx-md-4">

                                <div class="row">
                                    <div class="col-6 d-flex  align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input class="form-control" asp-for="FirstName">
                                            <label class="form-label" asp-for="FirstName"></label>
                                            <span class="text-danger" asp-validation-for="FirstName"></span>
                                        </div>
                                    </div>

                                    <div class="col-6 d-flex  align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input class="form-control" asp-for="LastName">
                                            <label class="form-label" asp-for="LastName"></label>
                                            <span class="text-danger" asp-validation-for="LastName"></span>
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-6 d-flex  align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input class="form-control" asp-for="Gender">
                                            <label class="form-label" asp-for="Gender"></label>
                                            <span class="text-danger" asp-validation-for="Gender"></span>
                                        </div>
                                    </div>
                                    <div class="col-6 d-flex  align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input class="form-control" asp-for="DateOfBirth">
                                            <label class="form-label" asp-for="DateOfBirth"></label>
                                            <span class="text-danger" asp-validation-for="DateOfBirth"></span>
                                        </div>
                                    </div>
                                </div>



                                <div class="row">
                                    <div class="col-6 d-flex  align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input class="form-control" asp-for="City">
                                            <label class="form-label" asp-for="City"></label>
                                            <span class="text-danger" asp-validation-for="City"></span>
                                        </div>
                                    </div>
                                    <div class="col-6 d-flex  align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input class="form-control" asp-for="Phone">
                                            <label class="form-label" asp-for="Phone"></label>
                                            <span class="text-danger" asp-validation-for="Phone"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-6 d-flex  align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input class="form-control" asp-for="UserName">
                                            <label class="form-label" asp-for="UserName"></label>
                                            <span class="text-danger" asp-validation-for="UserName"></span>
                                        </div>
                                    </div>
                                    <div class="col-6 d-flex  align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input class="form-control" asp-for="Email">
                                            <label class="form-label" asp-for="Email"></label>
                                            <span class="text-danger" asp-validation-for="Email"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6 d-flex align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input class="form-control" asp-for="Password">
                                            <label class="form-label" asp-for="Password"></label>
                                            <span class="text-danger" asp-validation-for="Password"></span>
                                        </div>
                                    </div>

                                    <div class="col-6 d-flex  align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input class="form-control" asp-for="RePassword">
                                            <label class="form-label" asp-for="RePassword"></label>
                                            <span class="text-danger" asp-validation-for="RePassword"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex  align-items-center mb-4">
                                    <div class="form-outline flex-fill mb-0">
                                        <input type="file" asp-for="Image" class="form-control" accept="images/" multiple />
                                        <span class="text-danger" asp-validation-for="Image"></span>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                    <button type="submit" class="btn btn-primary btn-lg">Kaydol</button>
                                </div>

                            </form>

                        </div>
                        <div class="col-md-10 col-lg-5   d-flex align-items-center order-1 order-lg-2">

                            <img src="~/images/register.jpg"
                                 class="img-fluid" alt="Sample image">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
