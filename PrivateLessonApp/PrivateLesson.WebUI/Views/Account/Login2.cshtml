@model LoginViewModel


<div class="panda">
    <div class="ear"></div>
    <div class="face">
        <div class="eye-shade"></div>
        <div class="eye-white">
            <div class="eye-ball"></div>
        </div>
        <div class="eye-shade rgt"></div>
        <div class="eye-white rgt">
            <div class="eye-ball"></div>
        </div>
        <div class="nose"></div>
        <div class="mouth"></div>
    </div>
    <div class="body"> </div>
    <div class="foot">
        <div class="finger"></div>
    </div>
    <div class="foot rgt">
        <div class="finger"></div>
    </div>
</div>
<form asp-area="" asp-controller="Account" asp-action="Login" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="hand"></div>
    <div class="hand rgt"></div>
    <h1>Panda Login</h1>
    <div class="form-group">
        <input required="required" class="form-control" asp-for="UserName"/>
        <label class="form-label" asp-for="UserName">Username    </label>
    </div>
    <div class="form-group">
        <input id="password" type="password" required="required" class="form-control" asp-for="Password" />
        <label class="form-label" asp-for="Password">Password</label>
        <p class="alert">Invalid Credentials..!!</p>
        
    </div>
    <button type="submit" class="btn btn-dark btn-link ">Giriş Yap</button>
    <a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-dark btn-link ">Kayıt Ol</a>

</form>

<script>

    $('#password').focusin(function () {
        $('form').addClass('up')
    });
    $('#password').focusout(function () {
        $('form').removeClass('up')
    });

    // Panda Eye move
    $(document).on("mousemove", function (event) {
        var dw = $(document).width() / 15;
        var dh = $(document).height() / 15;
        var x = event.pageX / dw;
        var y = event.pageY / dh;
        $('.eye-ball').css({
            width: x,
            height: y
        });
    });

    // validation


    $('.btn').click(function () {
        $('form').addClass('wrong-entry');
        setTimeout(function () {
            $('form').removeClass('wrong-entry');
        }, 3000);
    });
</script>














