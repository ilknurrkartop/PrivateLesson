@model LoginViewModel

<div class="container-fluid" id="container">
    <div class="panda">
  <div class="ear"></div>
  <div class="face">
    <div class="eye-shade"></div>
    <div class="eye-white">
      <div class="eye-ball"></div>
    </div>
    <div class="eye-shade rgt"></div>
    <div class="eye-white rgt">
      <div class="eye-ball"></div>
    </div>
    <div class="nose"></div>
    <div class="mouth"></div>
  </div>
  <div class="body"> </div>
  <div class="foot">
    <div class="finger"></div>
  </div>
  <div class="foot rgt">
    <div class="finger"></div>
  </div>
</div>

    <form id="panda-form" asp-area="" asp-controller="Account" asp-action="Login" method="post">
        <input type="hidden" asp-for="ReturnUrl" />
  <div class="hand"></div>
  <div class="hand rgt"></div>
  <h1 id="h1">Giriş Yap</h1>
  <div class="panda-form-group">
    @*<input required="required" class="panda-form-control" />*@
   @* <label class="panda-form-label">Username </label>*@
            <label class="panda-form-label" asp-for="UserName"></label>
            <input class="panda-form-control" asp-for="UserName" />
            <span class="text-danger" asp-validation-for="UserName"></span>
  </div>
  <div class="panda-form-group">
  @*  <input id="password" type="password" required="required" class="panda-form-control" />
    <label class="panda-form-label">Password</label>*@
            <label class="panda-form-label" asp-for="Password"></label>
            <input id="password" type="password" required="required" class="panda-form-control" asp-for="Password" />
            <span class="text-danger" asp-validation-for="Password"></span>
    <p class="panda-alert">Invalid Credentials..!!</p>
            <button type="submit" class="btn btn-primary">Giriş Yap </button>
            @*id="panda-btn"*@
  </div>
        <div class="mt-3">
            <a asp-area="" asp-controller="Account" asp-action="ForgotPassword" class="text-body">Şifremi Unuttum</a>
        </div>
</form>
</div>


@section Styles{
    <link href="~/css/panda.css" rel="stylesheet" />
}
@section Scripts{
    <script>
    $('#password').focusin(function(){
        $('#panda-form').addClass('up')
    });
    $('#password').focusout(function(){
          $('#panda-form').removeClass('up')
    });

    // Panda Eye move
    $(document).on( "mousemove", function( event ) {
      var dw = $(document).width() / 15;
      var dh = $(document).height() / 15;
      var x = event.pageX/ dw;
      var y = event.pageY/ dh;
      $('.eye-ball').css({
        width : x,
        height : y
      });
    });

    // validation


    $('.btn').click(function(){
      $('#panda-form').addClass('wrong-entry');
        setTimeout(function(){ 
               $('#panda-form').removeClass('wrong-entry');
         },3000 );
    });
    </script>
}