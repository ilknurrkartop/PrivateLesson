@model AdvertViewModel
<div class="container pt-4 mt-5">
    <div class="row">
        <div class="col-8">
            <div class="card mb-3 border-3">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img class="w-100 rounded-start" src="/images/@Model.Image.Url" />
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title mt-3">@Model.FirstName @Model.LastName</h5>
                            <div class="mt-4">
                                @for (int i = 0; i < 5; i++)
                                {
                                    <i class="fa-regular fa-star text-warning fa-xs"></i>
                                }
                            </div>
                            <p class="card-text fs-6 mt-4 fw-bold text-black">Ders Adı: <span class="display-6 fs-5 fw-light text-primary ms-1">@Model.BranchName</span></p>
                            <p class="card-text">@Model.Description</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <p class="card-text"><small class="text-body-secondary">Son Güncelleme: @Model.UpdatedDate</small></p>
                </div>
            </div>
        </div>
        <div class="col-4">
            @*Fiyat Bölümü*@
            <div class="border-1 border-warning border p-3 pb-0">
                <div class="row">
                    <div class="col-6 d-flex justify-content-center align-items-center">
                        <h5 class="fs-3 text-primary">@($"{Model.Price:C2}")</h5>
                    </div>
                    <div class="col-6 d-flex justify-content-center align-items-center">
                        <p class="fs-6 text-center"></p>
                        <form asp-area=""
                              asp-controller="Cart"
                              asp-action="AddToCart"
                              method="post">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-warning">Dersi Al</button>
                        </form>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 text-center">
                        <p class="text-success mb-2 mt-2 fw-bold"></p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
