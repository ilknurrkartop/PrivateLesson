@model List<TeacherModel>
<div class="container-fluid pt-5">
    <div class="container">
        <div class="text-center pb-2">
            <p class="section-title px-5">
                <span class="px-2"> Öğretmenler</span>
            </p>
            <h1 class="mb-4"> Öğretmenler</h1> <p>Alanında tecrübeli, en yüksek değerlendirmeye sahip, en çok tercih edilen öğretmenlerimiz.</p>
        </div>
        <div class="row">

           
                
            @foreach (var teachers in Model)
            {
                <div class="col-md-6 col-lg-3 text-center team mb-5">
                    <div class="position-relative overflow-hidden mb-4"
                         style="border-radius: 100%">
                        <img class="img-fluid w-100" src="~/images/@teachers.ImageUrl" alt="" />
                        <div class="team-social d-flex align-items-center justify-content-center w-100 h-100 position-absolute">
                            <a class="btn btn-outline-light text-center mr-2 px-0"
                               style="width: 38px; height: 38px"
                               href="#">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a class="btn btn-outline-light text-center mr-2 px-0"
                               style="width: 38px; height: 38px"
                               href="#">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a class="btn btn-outline-light text-center px-0"
                               style="width: 38px; height: 38px"
                               href="#">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                        </div>
                    </div>
                    <h2>@teachers.FirstName @teachers.LastName</h2>
                    <div class="course-1-item">
                        <figure class="thumnail">

                            <div class="category">
                                @for (int i = 0; i < @teachers.TeacherBranches.Count; i++)
                                {
                                    <span class="ps-3 text-center text-success">@teachers.TeacherBranches[i].BranchName </span>
                                }

                            </div>
                        </figure>
                        <div class="course-1-content pb-4">
                            
                            <div class="rating text-center mb-3">
                                <span class="icon-star2 text-warning"></span>
                                <span class="icon-star2 text-warning"></span>
                                <span class="icon-star2 text-warning"></span>
                                <span class="icon-star2 text-warning"></span>
                                <span class="icon-star2 text-warning"></span>

                            </div>
                            <p class="desc mb-4">
                                @teachers.Graduation
                            </p>
                            <p><a asp-area="" asp-controller="Home" asp-action="TeacherDetails" asp-route-id="@teachers.Id" class="btn btn-primary rounded-0 px-4">İncele</a></p>
                        </div>
                    </div>

                   @* <h3>@teachers.FirstName @teachers.LastName</h3>*@
                </div>

            }
           
        </div>
    </div>
</div>